{
    "name": "usmanzafar/btcmarkets",
    "type": "library",
    "description": "PHP Client for BTCmarkets.net",
    "keywords": [
        "usmanzafar",
        "btcmarkets",
        "btcoins"
    ],
    "homepage": "https://github.com/usmanzafar/php-btcmarkets-api",
    "license": "MIT",
    "authors": [
        {
            "name": "usman zafar",
            "email": "usmanzafar10@hotmail.com",
            "homepage": "https://github.com/usmanzafar",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.0",
        "guzzlehttp/guzzle": "6.2.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "symfony/var-dumper": "3.2.7"
    },
    "autoload": {
        "psr-4": {
            "usmanzafar\\btcmarkets\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "usmanzafar\\btcmarkets\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
